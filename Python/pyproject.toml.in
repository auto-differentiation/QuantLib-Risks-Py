[tool.poetry]
name = "QuantLib-Risks"
version = "@PACKAGE_VERSION@"
description = "Fast risks calculations in QuantLib"
authors = [
    "Auto Differentiation Dev Team <dev@auto-differentiation.com>",
    "QuantLib Team <quantlib-users@lists.sourceforge.net>"
]
readme = "README.md"
homepage = "https://auto-differentiation.github.io"
repository = "https://github.com/auto-differentiation/XAD"
documentation = "https://auto-differentiation.github.io/quantlib"
keywords = [
    "automatic-differentiation",
    "derivatives",
    "risk-management",
    "quant-finance",
    "greeks",
    "risks"
]
classifiers = [
    "Development Status :: 5 - Production/Stable",
    "Intended Audience :: Developers",
    "Intended Audience :: Education",
    "Intended Audience :: Financial and Insurance Industry",
    "Intended Audience :: Science/Research",
    "Intended Audience :: End Users/Desktop",
    "License :: OSI Approved :: GNU Affero General Public License v3 or later (AGPLv3+)",
    "License :: Other/Proprietary License",
    "Operating System :: MacOS :: MacOS X",
    "Operating System :: Microsoft :: Windows",
    "Operating System :: POSIX :: Linux",
    "Natural Language :: English",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Programming Language :: Python :: Implementation :: CPython",
    "Topic :: Scientific/Engineering",
    "Topic :: Software Development"
]
license = "AGPL-3.0-or-later"
packages = [
    { include = "QuantLib_Risks" }
]
exclude = [
    "QuantLib_Risks/CMakeFiles",
    "QuantLib_Risks/*.cmake",
    "QuantLib_Risks/*.cxx",
]

[tool.poetry.urls]
download = "https://pypi.org/project/QuantLib-Risks/#files"
tracker = "https://github.com/auto-differentiation/XAD/issues"

[tool.poetry.build]
script = "build_extensions.py"
generate-setup-file = false

[tool.poetry.dependencies]
python = ">=3.8.1,<4.0"
xad-autodiff = ">=1.5.1"


[build-system]
requires = [
    "poetry-core>=1.0.0", 
    "setuptools>=42"
]
build-backend = "poetry.core.masonry.api"

